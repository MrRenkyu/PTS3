<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A9D8F"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="QuizzFragment">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/maven_pro_bold"
        android:gravity="center"
        android:text="Quizz"
        android:textColor="#E9C46A"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/maven_pro_bold"
        android:paddingLeft="20dp"
        android:text="Quel groupe ?"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E9C46A">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/maven_pro_bold"
        android:paddingLeft="20dp"
        android:text="Nombre de questions ?"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E9C46A">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_unlimited"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right">

        <Switch
            android:id="@+id/SW_unlimitedQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maven_pro_bold"
            android:gravity="center"
            android:shadowColor="#BC9696"
            android:text="Continué tant qu'il n'y a pas d'erreur"
            android:textColor="#FFFCFC"
            android:textColorHighlight="#DC1B1B"
            android:textColorLink="#D378E3" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/maven_pro_bold"
        android:paddingLeft="20dp"
        android:text="Quelle modalité de jeu ?"
        android:textColor="#EFEFEF"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E9C46A">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_allTypeOfQuestion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right">

        <Switch
            android:id="@+id/questionsHasardSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maven_pro_bold"
            android:gravity="center"
            android:shadowColor="#BC9696"
            android:text="Tous les types de questions possibles au hasard"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#DC1B1B"
            android:textColorLink="#D378E3" />
    </RelativeLayout>

    <Button
        android:id="@+id/buttonCommencer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#E9C46A"
        android:fontFamily="@font/maven_pro_bold"
        android:text="Commencer"
        android:textColor="#264653"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>