<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#C5C3C3"
tools:context=".Group_fragment.GroupDetailActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TV_groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#264653"
            android:fontFamily="@font/maven_pro_bold"
            android:gravity="center"
            android:text="Etudiants"
            android:textColor="#FFFFFF"
            android:textSize="36sp" />

        <SearchView
            android:id="@+id/searchView_GroupDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E9C46A"
            android:inputType="text">

        </SearchView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_GroupDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#264653" />
</LinearLayout>

</FrameLayout>